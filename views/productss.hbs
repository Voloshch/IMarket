<h1 style="margin-left: 450px;margin-top: 50px">Добавление нового товара</h1>

<div class="container1" style="margin-top:70px; width:500px; margin-left:500px">
    <form name="myForm"  action="/productss" method="post">
        <div class="form-group row">
            <label for="cat" class="col-sm-2 col-form-label">Товар</label>
            <div class="col-sm-10">
                {{#each izm}}
                <input type="text" value="{{name}}" style = "width: 250px; margin-left: 50px" class="form-control" name = "prod" id="cat" placeholder="Название товара">
                {{/each}}
            </div>
        </div>
        <div class="form-group row">
            <label for="cat" class="col-sm-2 col-form-label">Производитель</label>
            <div class="col-sm-10">
                <select style = "width: 250px; margin-left: 50px" class="form-control" name="manuf">
                    {{#each manuf}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="cat" class="col-sm-2 col-form-label">Категория</label>
            <div class="col-sm-10">
                <select style = "width: 250px; margin-left: 50px" class="form-control" name="categ">
                    {{#each category}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="cat"  class="col-sm-2 col-form-label">Стоимость товара</label>
            <div class="col-sm-10">
                {{#each izm}}
                <input type="text" value="{{cost}}" style = "width: 250px; margin-left: 50px" class="form-control" name = "cost" id="cost" placeholder="Стоимость товара">
                {{/each}}
            </div>
        </div>
        <div class="form-group row">
            <label for="cat"  class="col-sm-2 col-form-label">Количество товара</label>
            <div class="col-sm-10">
                {{#each izm}}
                <input type="text" value="{{quantity}}" style = "width: 250px; margin-left: 50px" class="form-control" name = "quantity" id="quantity" placeholder="Количество товара">
                {{/each}}
            </div>
        </div>
        <div class="form-group row">
            <label for="cat" class="col-sm-2 col-form-label">Картинка</label>
            <div class="col-sm-10">
                {{#each izm}}
                <input type="text" value="{{url}}" style = "width: 250px; margin-left: 50px" class="form-control" name = "kart" id="kart" placeholder="Название картинки">
                {{/each}}
            </div>
        </div>
        <div class="form-group row">
            <label for="cat" class="col-sm-2 col-form-label">Описание</label>
            <div class="col-sm-10">
                <textarea name="area"  class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Описание товара"></textarea>
            </div>
        </div>
        <br>
        <button type="submit" id="btn" class="btn btn-primary">Изменить</button>
        {{#if msg}}
        <div> <p>{{msg}}</p></div>
        {{/if}}
    </form>
</div>

