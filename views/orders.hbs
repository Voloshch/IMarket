<h1 style="margin-left: 500px">Добавление нового заказа</h1>
<div class="container1" style="margin-top:70px; width:500px; margin-left:500px">
    <form name="myForm" action="/addorder" method="post">
        <div class="form-group row">
            <label  class="col-sm-2 col-form-label">Название товарв</label>
            <div class="col-sm-10">
                <select style = "width: 250px; margin-left: 50px" class="form-control" name="prodd">
                    {{#each prod}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <br>
        <div class="form-group row">
            <label  class="col-sm-2 col-form-label">Название товарв</label>
            <div class="col-sm-10">
                <select style = "width: 250px; margin-left: 50px" class="form-control" name="email">
                    {{#each user}}
                    <option value="{{id}}">{{email}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="cat" class="col-sm-2 col-form-label">Количество</label>
            <div class="col-sm-10">
                <input type="text" style = "width: 250px; margin-left: 50px" class="form-control" name = "quant" id="cat" placeholder="Количество товара">
            </div>
        </div>
        <br>
        <button type="submit" id="btn" class="btn btn-primary">Добавить</button>
        <br>
        <br>
        <br>
        <br>
        {{#if msg}}
        <div> <p>{{msg}}</p></div>
        {{/if}}
    </form>
</div>
<h1 style="margin-left: 500px">Таблица заказов</h1>
<br>
<table class="table" style="width: 900px; margin-left:300px">
    <thead>
    <tr>
        <th>ID товара</th>
        <th>ID клиента</th>
        <th>Количество товара</th>
        <th>Цена заказа</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each ord}}
    <tr>
        <td>{{prod_id}}</td>
        <td>{{user_id}}</td>
        <td>{{quantity}}</td>
        <td>{{cost}}</td>
        <td><a class="btn btn-primary" href="/deleteorder/{{id}}">
            Удалить заказ
        </a></td>
    </tr>
    {{/each}}
    </tbody>
</table>