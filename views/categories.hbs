<h1 style="margin-left: 450px;margin-top: 50px">Добавление новой категории</h1>
<div class="container1" style="margin-top:70px; width:500px; margin-left:500px">
    <form name="myForm" action="/category" method="post">
        <div class="form-group row">
            <label for="cat" class="col-sm-2 col-form-label">Категория</label>
            <div class="col-sm-10" id="em">
                <input type="text" style = "width: 250px" class="form-control" name = "cat" id="cat" placeholder="Категория">
            </div>
        </div>
        <br>
        <button type="submit" id="btn" class="btn btn-primary">Добавить</button>
        {{#if msg}}
        <div> <p>{{msg}}</p></div>
        {{/if}}
    </form>
</div>
<br>
<br>
<table class="table" style="width: 900px; margin-left:300px">
    <thead>
    <tr>
        <th>id</th>
        <th>Название категории</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each posts}}
    <tr>
        <th>{{id}}</th>
        <td>{{name}}</td>
        <td><a class="btn btn-primary" href="/deletecategory/{{id}}">
            Удалить категорию
        </a></td>
    </tr>
    {{/each}}
    </tbody>
</table>
